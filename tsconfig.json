{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["vite/client"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "windi.config.ts", "vite.config.ts", "*.d.ts"],
  "exclude": ["node_modules", "build"],
  "extends": "@tsconfig/recommended/tsconfig.json"
}
