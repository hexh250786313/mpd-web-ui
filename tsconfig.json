{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["vite/client"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@assets": ["src/assets"],
      "@assets/*": ["src/assets/*"],
      "@lib": ["src/lib"],
      "@lib/*": ["src/lib/*"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@containers": ["src/containers"],
      "@containers/*": ["src/containers/*"],
      "@routes": ["src/routes"],
      "@routes/*": ["src/routes/*"],
      "@i18n": ["src/i18n"],
      "@i18n/*": ["src/i18n/*"],
      "@stores": ["src/stores"],
      "@stores/*": ["src/stores/*"],
      "@models": ["src/models"],
      "@models/*": ["src/models/*"],
      "@styles": ["src/styles"],
      "@styles/*": ["src/styles/*"],
      "@types": ["src/types/index.ts"],
      "@layouts": ["src/layouts"],
      "@layouts/*": ["src/layouts/*"]
    }
  },
  "include": ["src", "windi.config.ts", "vite.config.ts", "*.d.ts"],
  "exclude": ["node_modules", "build"],
  "extends": "@tsconfig/recommended/tsconfig.json"
}
